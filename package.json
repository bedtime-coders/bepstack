{
	"name": "bedstack-stripped",
	"title": "Bedstack (Stripped)",
	"description": "âš¡ Stripped version of Bedstack for rapid prototyping",
	"type": "module",
	"scripts": {
		"dev": "bun run --watch src/index.ts",
		"build": "bun build src/index.ts --outdir dist --target=bun --sourcemap",
		"preview": "bun run dist/index.js",
		"fix": "biome check --write",
		"check": "biome check",
		"check:errors": "biome check --diagnostic-level=error",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf node_modules bun.lockb dist",
		"test:api": "bun run scripts/test-api",
		"test:unit": "bun test",
		"test": "bun test:api && bun test:unit",
		"db": "docker compose up",
		"db:start": "docker compose up -d",
		"db:stop": "docker compose stop",
		"db:restart": "docker compose restart",
		"db:down": "docker compose down",
		"db:remove": "docker compose down -v",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:studio": "drizzle-kit studio",
		"db:migrate": "drizzle-kit migrate",
		"db:seed": "bun run drizzle/seed.ts",
		"db:reset": "bun run drizzle/reset.ts"
	},
	"dependencies": {
		"@bedtime-coders/elysia-openapi": "^1.1.0",
		"@elysiajs/static": "^1.3.0",
		"@yolk-oss/elysia-env": "^3.0.0",
		"chalk": "^5.4.1",
		"drizzle-orm": "^0.44.2",
		"elysia": "^1.3.5",
		"http-status-codes": "^2.3.0",
		"jose": "^6.0.11",
		"radashi": "^12.5.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.0",
		"@types/bun": "^1.2.15",
		"@types/newman": "^5.3.6",
		"drizzle-kit": "^0.31.1",
		"drizzle-seed": "^0.3.1",
		"newman": "^6.2.1",
		"pg": "^8.16.2",
		"typescript": "^5.8.3"
	},
	"module": "src/index.js"
}
