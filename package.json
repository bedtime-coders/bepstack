{
	"name": "bepstack",
	"title": "Bepstack",
	"description": "Bun + Elysia + Prisma = ❤️",
	"type": "module",
	"scripts": {
		"dev": "bun run --watch src/index.ts",
		"build": "bun run scripts/build.sh",
		"preview": "./dist/server",
		"fix": "biome check --write",
		"check": "biome check",
		"check:errors": "biome check --diagnostic-level=error",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf node_modules bun.lockb dist",
		"test:api": "bun run scripts/test/api",
		"test": "bun test --preload ./src/tests/setup.ts --watch",
		"db": "docker compose up",
		"db:dev": "prisma dev",
		"db:pull": "prisma db pull",
		"db:generate": "prisma generate",
		"db:studio": "prisma studio",
		"db:push": "prisma db push",
		"db:migrate": "prisma migrate dev",
		"db:reset": "prisma migrate reset",
		"db:status": "prisma migrate status",
		"db:start": "docker compose up -d",
		"db:stop": "docker compose stop",
		"db:restart": "docker compose restart",
		"db:down": "docker compose down",
		"db:remove": "docker compose down -v"
	},
	"dependencies": {
		"@bedtime-coders/elysia-openapi": "^1.1.0",
		"@elysiajs/eden": "^1.3.2",
		"@elysiajs/static": "^1.3.0",
		"@prisma/client": "^6.10.1",
		"@yolk-oss/elysia-env": "^3.0.0",
		"camelcase": "^8.0.0",
		"chalk": "^5.4.1",
		"elysia": "^1.3.5",
		"http-status-codes": "^2.3.0",
		"jose": "^6.0.11",
		"nanoid": "^5.1.5",
		"prisma": "^6.10.1",
		"radashi": "^12.6.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"@types/bun": "^1.2.17",
		"@types/newman": "^5.3.6",
		"newman": "^6.2.1",
		"pg": "^8.16.3",
		"typescript": "^5.8.3"
	},
	"module": "src/index.js"
}
